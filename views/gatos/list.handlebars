{{!-- views/gatos/list.handlebars --}}
<h1 class="mb-4">{{title}}</h1>

<table class="table table-striped align-middle">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Edad</th>
      <th>Peso</th>
      <th>Salud</th>
      <th>Vacunado</th>
      <th>CER</th>
      <th>Colonia</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each gatos}}
    <tr>
      <td>{{nombre}}</td>
      <td>{{edad}}</td>
      <td>{{peso}}</td>
      <td>
        <span class="badge 
            {{#if (eq estadoSalud 'GRAVE')}}bg-danger{{/if}}
            {{#if (eq estadoSalud 'REGULAR')}}bg-warning text-dark{{/if}}
            {{#if (eq estadoSalud 'SANO')}}bg-success{{/if}}">
          {{estadoSalud}}
        </span>
      </td>
      <td>{{#if vacunado}}<i class="bi bi-check-circle-fill text-success"></i>{{else}}<i
          class="bi bi-check-circle-fill text-danger"></i>{{/if}}</td>
      <td>{{#if cer}}<i class="bi bi-check-circle-fill text-success"></i>{{else}}<i
          class="bi bi-check-circle-fill text-danger"></i>{{/if}}</td>
      <td>{{coloniaNombre}}</td>
      <td>
        <a href="/gatos/{{id}}" class="btn btn-sm btn-outline-primary">Ver</a>
        <a href="/gatos/{{id}}/edit" class="btn btn-sm btn-outline-secondary">Editar</a>
        <form action="/gatos/{{id}}?_method=DELETE" method="POST" class="d-inline">
          <button class="btn btn-sm btn-outline-danger">Borrar</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

<a href="/gatos/new" class="btn btn-primary mt-3">Crear nuevo gato</a>