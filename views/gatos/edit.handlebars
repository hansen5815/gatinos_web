  <h1>{{title}}</h1>
  <form action="/gatos/{{gato.id}}?_method=PUT" method="POST">
    <div>
      <label for="nombre">Nombre:</label>
      <input type="text" id="nombre" name="nombre" value="{{gato.nombre}}" required>
    </div>
    <div>
      <label for="edad">Edad:</label>
      <input type="number" id="edad" name="edad" step="1" value="{{gato.edad}}" required>
    </div>
    <div>
      <label for="peso">Peso (kg):</label>
      <input type="number" id="peso" name="peso" step="0.1" value="{{gato.peso}}" required>
    </div>
    <button type="submit">Guardar Cambios</button>
  </form>
  <a href="/gatos">Cancelar</a>
